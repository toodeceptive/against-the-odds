{
  "name": "against-the-odds",
  "version": "1.0.0",
  "description": "Official Against The Odds (AO) brand website and store",
  "private": true,
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:shopify": "playwright test --config=playwright.shopify.config.js",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "build": "echo 'Build process not yet configured'",
    "dev": "echo 'Development server not yet configured'",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-env.ps1",
    "setup:auto": "powershell -ExecutionPolicy Bypass -File scripts/setup/auto-configure-env.ps1",
    "health": "powershell -ExecutionPolicy Bypass -File scripts/health/comprehensive-check.ps1",
    "sync": "powershell -ExecutionPolicy Bypass -File scripts/sync/sync-all.ps1",
    "test:desktop": "powershell -ExecutionPolicy Bypass -File scripts/desktop-automation/test-system.ps1",
    "test:desktop:quick": "powershell -ExecutionPolicy Bypass -File scripts/desktop-automation/test-system.ps1 -Quick",
    "verify:pipeline": "powershell -ExecutionPolicy Bypass -File scripts/verify-pipeline.ps1"
  },
  "keywords": [
    "e-commerce",
    "shopify",
    "brand",
    "merchandise"
  ],
  "author": "Against The Odds",
  "license": "UNLICENSED",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "screenshot-desktop": "^1.15.0",
    "tesseract.js": "^5.0.4",
    "sharp": "^0.33.0"
  },
  "optionalDependencies": {
    "robotjs": "^0.6.0",
    "node-window-manager": "^2.2.4"
  }
}
