# Shopify Environment Variables Template
# Copy values to .env.local

# Store Configuration
SHOPIFY_STORE_DOMAIN=aodrop.com
SHOPIFY_STORE_URL=https://aodrop.com

# Admin API Credentials
SHOPIFY_API_KEY=your_admin_api_key_here
SHOPIFY_API_SECRET=your_admin_api_secret_here
SHOPIFY_ACCESS_TOKEN=your_admin_access_token_here

# Storefront API (if needed)
SHOPIFY_STOREFRONT_API_TOKEN=your_storefront_token_here

# Theme Configuration
SHOPIFY_THEME_ID=your_theme_id_here

# Development Settings
SHOPIFY_DEV_STORE=your_dev_store.myshopify.com
SHOPIFY_PARTNER_ORG_ID=your_partner_org_id_here
