# Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to the repository

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=toodeceptive
GITHUB_REPO=against-the-odds

# Shopify Configuration
# Client ID from Shopify App Settings
SHOPIFY_API_KEY=your_shopify_api_key_here
# Secret from Shopify App Settings
SHOPIFY_API_SECRET=your_shopify_api_secret_here
# Admin API Access Token (get from Shopify Admin > Apps > Development > Custom apps)
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_STORE_DOMAIN=aodrop.com
SHOPIFY_STORE_URL=https://aodrop.com
SHOPIFY_THEME_ID=your_theme_id_here
# Optional: theme access token for shopify theme dev (see docs/CREDENTIALS_SETUP.md)
SHOPIFY_CLI_THEME_TOKEN=your_theme_access_token_here
SHOPIFY_STORAGE_STATE=your_storage_state_path_here

# Cloudflare Configuration (if needed)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# Development Configuration
NODE_ENV=development
DEBUG=false

# API Keys (if needed)
# STRIPE_API_KEY=your_stripe_key_here
# SENDGRID_API_KEY=your_sendgrid_key_here
