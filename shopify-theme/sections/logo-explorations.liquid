<section class="section" id="catalog">
  <div class="container">
    <div class="section__header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
    </div>
    <div class="logo-grid">
      {% for block in section.blocks %}
        <figure {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {{
              block.settings.image
              | image_url: width: 600
              | image_tag: alt: block.settings.alt_text, loading: "lazy"
            }}
          {% else %}
            <div class="placeholder">Add logo image</div>
          {% endif %}
          {% if block.settings.caption != blank %}
            <figcaption>{{ block.settings.caption }}</figcaption>
          {% endif %}
        </figure>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Logo explorations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Logo explorations"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "A curated set of AO logo concepts that represent the tone and energy of the brand. These visuals inform the next steps for product, packaging, and digital presence."
    }
  ],
  "blocks": [
    {
      "type": "logo_card",
      "name": "Logo card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "AO logo variation"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Logo exploration"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Logo explorations",
      "blocks": [
        {
          "type": "logo_card"
        },
        {
          "type": "logo_card"
        },
        {
          "type": "logo_card"
        }
      ]
    }
  ]
}
{% endschema %}
